@startuml C4_Elements

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

title C4Model Container diagram for Maps

Person(user, "User")

System_Boundary(weatherSystem, "Weather-Api System") {
    Container(nginx_proxy, "Proxy", "Nginx", $descr="Routes requests")
    Container(maps_api, "Maps-Api", "Kotlin & Ktor", $descr="REST Api for HAM airport connections")
    Container(maps_scheduler, "Maps-Scheduler", "Kotlin", $descr="Schedules import-event")
    Container(maps_cache, "Cache", "Redis", $descr="Api-data & import-event")
    Container(maps_ui, "Maps-Ui", "Node & Sveltekit (SSR)", $descr="Display HAM airport connections")
}
System_Ext(ham_api, "HAM airport Api", "External Api for airport connections")


Rel(user, nginx_proxy, "View weather", "https")
Rel_R(nginx_proxy, maps_ui, "Route to UI", "https")
Rel_D(nginx_proxy, maps_api, "Route to API", "https")
Rel(maps_ui, maps_api, "Request data for SSR", "https")
Rel(maps_api, maps_cache, "Poll import-event & cache Api response")
Rel(maps_scheduler, maps_cache, "Schedule import-event")
Rel_R(maps_api, ham_api, "Harvest airport connections", "https")

LAYOUT_TOP_DOWN()
@enduml